<ScrollView
    android:paddingTop="100dp"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.testeeclipse.PessoaActivity">

        <TextView
            android:layout_marginBottom="10dp"
            style="@style/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:" />

        <EditText
            android:layout_marginBottom="20dp"
            style="@style/caixa_cinza"
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/texto"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EndereÃ§o:" />

        <EditText
            android:layout_marginBottom="20dp"
            style="@style/caixa_cinza"
            android:id="@+id/edtEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtCpfCnpj"
            style="@style/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPF:" />

        <EditText
            android:layout_marginBottom="20dp"
            style="@style/caixa_cinza"
            android:id="@+id/edtCpfCnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <RadioGroup
            android:id="@+id/rbgCpfCnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:textColor="@color/branco"
                android:id="@+id/rbtCpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="CPF" />

            <RadioButton
                android:textColor="@color/branco"
                android:id="@+id/rbtCnpj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNPJ" />
        </RadioGroup>

        <Button
            style="@style/botao_azul"
            android:layout_marginTop="20dp"
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:onClick="enviarPessoa"/>

    </LinearLayout>
</ScrollView>