<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:alertDialogTheme" tools:targetApi="honeycomb">
            @style/AppTheme.Dark.Dialog.Info
        </item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="botoes">
        <item name="android:background">@color/vermelho</item>
        <item name="android:bottomRightRadius">@dimen/margin_widgets</item>
        <item name="android:textColor">@color/branco</item>
    </style>

    <style name="fundo">
        <item name="android:background">@color/cinza</item>
    </style>


    <style name="Txt_Teste">
        <item name="android:textSize">@dimen/texto_padrao</item>
        <item name="android:layout_marginBottom">@dimen/margin_widgets</item>
    </style>

    <style name="Edt_Estilo">
        <item name="android:textSize">@dimen/texto_padrao</item>
        <item name="android:layout_marginBottom">@dimen/margin_widgets</item>
    </style>

    <style name="AppTheme.Dark.Dialog.Sucesso" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:background">@color/primary_sucesso</item>
    </style>

    <style name="AppTheme.Dark.Dialog.Info" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:background">@color/primary_info</item>
    </style>

    <style name="AppTheme.Dark.Dialog.Error" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:background">@color/primary_error</item>
    </style>

    <style name="AppTheme.Dark.Dialog.Alert" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
